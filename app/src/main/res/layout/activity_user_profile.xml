<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xperienceit.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="number"
            android:padding="16dp"
            android:text="Enter Phone Number"

            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="number"
            android:padding="16dp"
            android:text="Enter Phone Number"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="number"
            android:padding="16dp"
            android:text="Enter Phone Number"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textStyle="bold" />


        <Button
            android:id="@+id/get_Otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/book_now_text"
            android:padding="16dp"
            android:text="GET OTP"
            android:textColor="@color/white_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Or"
                android:textColor="@color/book_now_text"
                android:textSize="16sp"
                android:textStyle="bold" />
            <!--<TextView
                android:text="@string/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up"
                android:paddingStart="10dp"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="16sp"/>-->

        </RelativeLayout>

        <Button
            android:id="@+id/google_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/google_login_button"
            android:drawableStart="@drawable/g_plus"
            android:padding="4dp"
            android:text="@string/login_with_google"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/fb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/facebook_login_button"
            android:drawableStart="@drawable/fb"
            android:padding="4dp"
            android:text="@string/login_with_fb"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/facebook_login_button"
            android:padding="4dp"
            android:text="LOG OUT"
            android:textColor="@color/black_text" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>