<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/big_margin"
    android:background="@drawable/box"
    android:padding="@dimen/cardview_padding"
    android:shrinkColumns="0"
    android:stretchColumns="0">

    <TableRow>

        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:singleLine="false"
            android:textAppearance="@style/CardViewText"
            android:textSize="@dimen/text_size_large"></TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:gravity="right"
            android:text="$400.00"
            android:textAppearance="@style/CardViewText"
            android:textSize="@dimen/text_size_large"></TextView>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_gray"
        android:padding="3dp" />

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:singleLine="false"
            android:text="Total :"
            android:textAppearance="@style/CardViewHeading"
            android:textSize="@dimen/xtra_large_text"></TextView>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:gravity="right"
            android:text="$400.00"
            android:textAppearance="@style/CardViewText"
            android:textSize="@dimen/text_size_large"></TextView>
    </TableRow>
</TableLayout>