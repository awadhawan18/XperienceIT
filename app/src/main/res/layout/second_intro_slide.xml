<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorslide_2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:foreground="@drawable/gradient_text_background"
        android:scaleType="centerCrop"
        android:src="@drawable/intro2" />

    <TextView
        android:id="@+id/slide_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slide_desc1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="@string/slide_2_title"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:text="@string/slide_2_desc"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>