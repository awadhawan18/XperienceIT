<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_view_tile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tile_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/grid_image_height"
        android:foreground="@drawable/image_gradient"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="@style/FabIconTextViewStyle" />
</RelativeLayout>